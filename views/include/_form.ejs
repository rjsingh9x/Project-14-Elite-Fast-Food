 <!-- form handling -->
 <form action="/api/users" method="POST" id="add_user">
    <div class="new_user">
        <div class="form-group">
            <label for="pname" class="text-light">Product Name</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="pname" value="" placeholder="Product Name">
        </div>
        <div class="form-group">
            <label for="quantity" class="text-light">Quantity</label>
            <input type="number" name="quantity" >
        </div>
       
        <div class="form-group">
            <button type="submit" class="btn text-dark update">Save</button>
        </div>

    </div>
</form>